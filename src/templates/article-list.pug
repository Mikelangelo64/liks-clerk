section.article-list.section
  ._container
    .article-list__wrapper
      .article-list-header.section-header
        h2.section-header__title Top Articles

        .article-list-categories.grab-desktop
          ul.article-list-categories__list.grab-desktop__inner
            each item in blogCategories
              li.article-list-categories__item
                a.article-list-categories__link.button-filled(
                  href=`${item.href}`,
                  class=`${item.isActive === 'true' ? 'active' : ''}`
                )
                  span= item.title

      .article-list__main
        each row in blogList
          .article-list-row.grab-desktop
            ul.article-list-row__ul.grab-desktop__inner
              each item in row
                li.article-list-row__item
                  a.article-list-row-media(href=`${item.href}`)
                    if item.isRecommended === 'true'
                      span.article-list-row-media__label Recommended

                    span.article-list-row-media__container
                      img(
                        src=require(`${item.media}`),
                        alt=`${item.title}`,
                        loading='lazy',
                        draggable='false'
                      )

                  .article-list-row__content
                    .article-list-row__readtime.readtime
                      .readtime__label
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M12 2C17.523 2 22 6.477 22 12C22 17.523 17.523 22 12 22C6.477 22 2 17.523 2 12C2 6.477 6.477 2 12 2ZM12 6C11.7348 6 11.4804 6.10536 11.2929 6.29289C11.1054 6.48043 11 6.73478 11 7V12C11.0001 12.2652 11.1055 12.5195 11.293 12.707L14.293 15.707C14.4816 15.8892 14.7342 15.99 14.9964 15.9877C15.2586 15.9854 15.5094 15.8802 15.6948 15.6948C15.8802 15.5094 15.9854 15.2586 15.9877 14.9964C15.99 14.7342 15.8892 14.4816 15.707 14.293L13 11.586V7C13 6.73478 12.8946 6.48043 12.7071 6.29289C12.5196 6.10536 12.2652 6 12 6Z" fill="#7F7F7F"/>
                        </svg>

                      span!= `${item.readtime} minutes read`

                    a.article-list-row__title(href=`${item.href}`)= item.title

                    p.article-list-row__description= item.description

                  .article-list-row__bottom
                    p.article-list-row__author= item.author

                    date.article-list-row__date(datetime=`${item.date.data}`)= item.date.title

      .article-list__footer
