section.banner.section(
  class=`${banner.specialClass && banner.specialClass !== '' ? banner.specialClass : ''}`
)
  ._container.banner__container.section__container
    .banner__wrapper
      .banner__main
        if banner.specialClass && banner.specialClass === 'article-page-banner'
          .article-page-banner__header
            include @/templates/breadcrumbs.pug

            .article-page-banner__info
              .article-page-banner__readtime.readtime
                .readtime__label
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2C17.523 2 22 6.477 22 12C22 17.523 17.523 22 12 22C6.477 22 2 17.523 2 12C2 6.477 6.477 2 12 2ZM12 6C11.7348 6 11.4804 6.10536 11.2929 6.29289C11.1054 6.48043 11 6.73478 11 7V12C11.0001 12.2652 11.1055 12.5195 11.293 12.707L14.293 15.707C14.4816 15.8892 14.7342 15.99 14.9964 15.9877C15.2586 15.9854 15.5094 15.8802 15.6948 15.6948C15.8802 15.5094 15.9854 15.2586 15.9877 14.9964C15.99 14.7342 15.8892 14.4816 15.707 14.293L13 11.586V7C13 6.73478 12.8946 6.48043 12.7071 6.29289C12.5196 6.10536 12.2652 6 12 6Z" fill="#7F7F7F"/>
                  </svg>

                span 5-7 minutes read

              date.article-page-banner__date(
                datetime='2023-02-04T00:00:00+00:00'
              ) 04.02.023

            p.article-page-banner__author Alex Ahom

        h1.banner__title!= banner.title

        if banner.subtitle && banner.subtitle !== ''
          p.banner__subtitle!= banner.subtitle

        .banner__button__container
          button.banner__button.button-filled.popup-open(
            data-popup='_popup-form'
          )
            span Order

          button.banner__button.button-hollow.popup-open(
            data-popup='_popup-form'
          )
            span Reviews

      if banner.media
        .banner-media
          .banner-media__item.l-size
            .banner-media__img
              img(src=require('@/assets/img/banner-media.png'), alt='banner')

          .banner-media__item.s-size
            p.banner-media__value 7

            p.banner-media__description Years on the market

          .banner-media__item.m-size
            p.banner-media__value 5700+

            p.banner-media__description Backlinks per month

      if banner.list
        ul.banner-list
          each item in banner.list
            li.banner-list__item
              p.banner-list__title= item.title

              p.banner-list__description= item.description

      if banner.remarkList && banner.remarkList.length !== 0
        each remark, index in banner.remarkList
          if index === 0
            include @/templates/remark.pug

      if banner.specialClass && banner.specialClass === 'blog-banner'
        include @/templates/article-banner.pug

      if banner.specialClass && banner.specialClass === 'article-page-banner'
        .article-page-banner__media
          img(src=require('@/assets/img/blog/article-main.jpg'), alt='article')
