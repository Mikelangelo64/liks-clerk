section.section.potential(
  class=`${potential.isLight && potential.isLight === 'true' ? '' : 'dark'}`
)
  ._container
    .potential__wrapper
      .potential__header.section-header
        h2.section-header__title= potential.title

        if potential.subtitle && potential.subtitle !== ''
          p.section-header__subtitle= potential.subtitle

      .potential__main
        .potential-slider.swiper.slider
          .swiper-wrapper.potential-slider__wrapper
            each item in potential.list
              .swiper-slide
                .potential-slider__item
                  p.potential-slider__title= item.title

                  .potential-slider__description!= item.description
