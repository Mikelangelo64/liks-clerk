section.section.remark(
  class=`${remark.specialClass && remark.specialClass !== '' ? remark.specialClass : ''}`
)
  ._container
    .remark__wrapper
      .remark-main
        .remark-main-header
          if !remark.specialClass || remark.specialClass !== 'mini'
            .remark-main__label
              img(src=require('@/assets/img/arrow-quote.svg'), alt='quote')

          if remark.titleHeader && remark.titleHeader !== '' || remark.subtitleHeader && remark.subtitleHeader !== ''
            .remark-main-header__content
              if remark.titleHeader && remark.titleHeader !== ''
                p.remark-main-header__title(
                  class=`${remark.titleHeader.specialClass && remark.titleHeader.specialClass !== '' ? remark.titleHeader.specialClass : ''}`
                )!= remark.titleHeader.value

              if remark.subtitleHeader && remark.subtitleHeader !== ''
                p.remark-main-header__subtitle!= remark.subtitleHeader
          //- else

          case remark.button.type 
            when 'text'
              p.remark-main__button.static.button-hollow(
                class=`${remark.button.hasFooter && remark.button.hasFooter === 'true' ? 'desktop' : ''}`
              )
                span= remark.button.title

            when 'link-green'
              a.remark-main__button.special.button-hollow(
                href=`${remark.button.href}`,
                class=`${remark.button.hasFooter && remark.button.hasFooter === 'true' ? 'desktop' : ''}`
              )
                span= remark.button.title

            when 'link'
            default
              a.remark-main__button.button-hollow(
                href=`${remark.button.href}`,
                class=`${remark.button.hasFooter && remark.button.hasFooter === 'true' ? 'desktop' : ''}`
              )
                span= remark.button.title

        if remark.title && remark.title !== ''
          p.remark-main__title= remark.title

        if remark.typography && remark.typography !== ''
          .remark-main__description.typography!= remark.typography

        if remark.button.hasFooter && remark.button.hasFooter === 'true'
          .remark-main__footer
            case remark.button.type 
              when 'text'
                p.remark-main__button.static.button-hollow
                  span= remark.button.title

              when 'link-green'
                a.remark-main__button.special.button-hollow(
                  href=`${remark.button.href}`
                )
                  span= remark.button.title

              when 'link'
              default
                a.remark-main__button.button-hollow(
                  href=`${remark.button.href}`
                )
                  span= remark.button.title

      if remark.list && remark.list.length !== 0
        ul.remark-list
          each item, index in remark.list
            li.remark-list__item
              .remark-list__count!= `${index + 1 < 10 ? '0' : ''}${index + 1}`

              p.remark-list__title= item.title

              p.remark-list__subtitle= item.subtitle
